{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/components/*": ["components/*"],
      "@/styles/*": ["styles/*"],
      "@/lib/*": ["lib/*"],
      "@/utils/*": ["utils/*"],

      "@/sections/*": ["sections/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
